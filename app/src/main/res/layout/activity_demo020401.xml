<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_demo020401"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liushu.crazyandroid.activity.Demo020401Activity">

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增大透明度"/>

        <Button
            android:id="@+id/btn_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="减小透明度"/>

        <Button
            android:id="@+id/btn_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一张"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_big"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignLeft="@id/ll_button"
        android:layout_below="@id/ll_button"
        android:src="@drawable/shuangta"/>

    <ImageView
        android:id="@+id/iv_small"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignLeft="@+id/iv_big"
        android:layout_below="@+id/iv_big"/>

</RelativeLayout>
